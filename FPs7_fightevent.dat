//メインファイトイベント

event s7_p7_fight_event
{
	set(fighteventlimit,0)
	
	//ダウルフォールｖｓ２度目のコスタ
	if (yet(s7_p7_bt01) && yet(s7_p7_ev03) == 0 && fighteventlimit == 0 && inBattle(dauru,michelle)  == 1 && isSameArmy(dauru,michelle) == 0){
		set(fighteventlimit,1)
		event(s7_p7_bt01)
	}
	
}
event s7_p11_fight_event
{
	set(fighteventlimit,0)
	
	//ペトカちゃん！　ペトカちゃん！！
	if (yet(s7_p11_bt01) && fighteventlimit == 0 && inBattle(tungsten,petka)  == 1 && isSameArmy(tungsten,petka)){
		set(fighteventlimit,1)
		event(s7_p11_bt01)
	}
	//ｖｓアルフリット王国軍
	if (yet(s7_p11_bt02) && fighteventlimit == 0 && inBattle(tungsten,wool) == 1 && isSameArmy(tungsten,wool) == 0){
		set(fighteventlimit,1)
		event(s7_p11_bt02)
	}
	//願うは必殺
	if (yet(s7_p11_bt03) && fighteventlimit == 0 && inBattle(tungsten,meaberuta) == 1 && isSameArmy(tungsten,meaberuta) == 0 && inPower(s7_p8,meaberuta)){
		set(fighteventlimit,1)
		event(s7_p11_bt03)
	}
	//タングステンｖｓギロベッツ
	if (yet(s7_p11_bt04) && fighteventlimit == 0 && inBattle(tungsten,gyrowetz) == 1 && isSameArmy(tungsten,gyrowetz) == 0){
		set(fighteventlimit,1)
		event(s7_p11_bt04)
	}
	//タングステンｖｓミシェル
	if (yet(s7_p11_bt05) && fighteventlimit == 0 && inBattle(tungsten,michelle) == 1 && isSameArmy(tungsten,michelle) == 0){
		set(fighteventlimit,1)
		event(s7_p11_bt05)
	}
	
}


event s7_p11_bt05
{
	select(sentak, 戦闘イベント$「タングステンｖｓミシェル」)
	if (sentak == 1)
	{
		scroll(michelle)
		wait()
		talk(michelle, 我々には魔女と戦う理由なんて無い。)
		erase()
		scroll(tungsten)
		wait()
		talk(tungsten, あーあーあー。@
		……何でどいつもこいつも、$
		話し合いで解決しようするんだ？)
		talk(tungsten, だって、圧倒的な暴力で支配した方が$
		よっぽど解決が早いし労力も少ないし、$
		効率的で合理的じゃないか！)
		talk(tungsten, まあいいや、死んじゃえ！！)
		erase()
	}
}
event s7_p11_bt04
{
	select(sentak, 戦闘イベント$「タングステンｖｓギロベッツ」)
	if (sentak == 1)
	{
		scroll(tungsten)
		wait()
		talk(tungsten, 肥えてゆく屍は随分と滑稽に映る。@
		横たわる死の袂で黄金の乳酒を分け合った君らが$
		この世で最も恐れているのは肉体的な飢餓だろう。)
		erase()
		scroll(gyrowetz)
		wait()
		talk(gyrowetz, タングステン？　タングステンだと！？$
		フロラントは何やっとる、奴も賛成したのか！@
		魔女どもめ、タングステンを忘れたか、$
		魔都も随分な節操無しになってしまったな！)
		erase()
		scroll(tungsten)
		wait()
		talk(tungsten, 魔女に善知と狡知の国境は無い。@
		知識があれば横たわるだけで幸せを感じられる。$
		夜に星を見れたら尚良い。)
		talk(tungsten, 他人に理解を求めさえしなければ、$
		お金もかからないし、労力もさほど必要じゃない。$
		知識を得て思索に耽る以上に良い事は他に無いよ。)
		talk(tungsten, 天体の運行は巡る。$
		万古の礎は定期的に復古される。)
		erase()
		scroll(gyrowetz)
		wait()
		talk(gyrowetz, ……何を言っておる？$
		サノアみたいな事を言……。)
		talk(gyrowetz, いや、サノアと同じ事を言っとるな！)
		talk(gyrowetz, 私が魔都に居たら貴様を戻すものか！@
		何の為にこんな体になってまで$
		我々があれを殺したと思っているのだ！)
		erase()
		scroll(tungsten)
		wait()
		talk(tungsten, ……殺した？@
		殺せるものかよ、星は巡るんだから。)
		talk(tungsten, 繰り返し求められるプロメテウス！$
		やがて火は全ての暴力と権力を凌駕するだろう！@
		古代の瓦礫は焼き払われなければ、$
		現代人の為の建物が建てられないのだ！)
		erase()
	}
}
event s7_p11_bt03
{
	select(sentak, 戦闘イベント$「タングステンｖｓメア＝ベルタ」)
	if (sentak == 1) 
	{
		scroll(meaberuta)
		wait()
		talk(meaberuta, タングステン師、$
		貴女は何を何処まで知って居られるか。)
		erase()
		scroll(tungsten)
		wait()
		talk(tungsten, 魔女だもんねえ。$
		墓まで持って行きたい秘密はあるよねえ。)
		talk(tungsten, でもさ、君らはサノアの墓を暴いたろ。)
		erase()
